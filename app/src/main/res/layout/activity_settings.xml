<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login1"
    android:layout_width="match_parent"

    android:background="@drawable/lite"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.siddhantjaiswal.sendit.Settings">

    <RelativeLayout
        android:id="@+id/activity_setting"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAlignment="center">

        <ImageView
            android:id="@+id/sid"
            android:layout_width="match_parent"
            android:layout_height="300sp"
            android:background="@drawable/rounded__corner"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="40dp"
            app:srcCompat="@drawable/com_facebook_profile_picture_blank_square" />

        <TextView
            android:textColor="#000000"
            android:id="@+id/textView"
            android:background="@drawable/rounded__corner"
            android:paddingTop="7sp"
            android:paddingBottom="8sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Name"
            android:layout_below="@+id/sid"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded__corner"
            android:ems="10"
            android:onClick="status_user"
            android:padding="5dp"
            android:text="Status"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20dp" />


        <LinearLayout
            android:id="@+id/asx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText"
            android:layout_marginTop="20sp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="20dp"
                android:layout_height="match_parent"

                android:layout_alignBottom="@+id/textView2"
                android:layout_toStartOf="@+id/textView2"
                app:srcCompat="@android:drawable/ic_search_category_default"
                />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="help"
                android:text="Need Help?"
                android:textColor="#3F51b5"
                 />


            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40sp"
                android:onClick="save"
                android:layout_alignParentBottom="false"
                android:layout_centerHorizontal="false"
                android:text="Save"
                 />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
