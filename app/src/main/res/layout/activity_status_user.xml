<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_status_user"
    android:layout_width="match_parent"

    android:background="@drawable/lite"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.siddhantjaiswal.sendit.Status_user">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:layout_marginTop="10sp"
            android:text="Status:"
            android:textColor="#3F51b5"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/rounded__corner"
                android:text="Heyy there..Enjoying SenDiT?"
                android:textColor="#000000"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded__corner"
            android:paddingTop="10sp"
            android:weightSum="1">

            <EditText
                android:id="@+id/edt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.00"
                android:hint="Your Status Goes Here"
                android:maxLength="120"
                android:maxLines="3" />

            <Button
                android:id="@+id/button3"
                android:layout_width="40sp"
                android:layout_height="40sp"
               android:background="@drawable/customshape"
                android:onClick="save_status"
                android:text="Ok"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="20sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:text="Whats On Your Mind?"
                android:textColor="#3F51b5"
                android:textSize="17sp" />

            <ScrollView
                android:layout_width="match_parent"
                android:background="@drawable/rounded__corner"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded__corner"
                    android:orientation="vertical"
                    android:scrollbarAlwaysDrawHorizontalTrack="true"
                    android:scrollbarAlwaysDrawVerticalTrack="false">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="372dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25sp"
                        android:onClick="onClick"
                        android:paddingLeft="10sp"
                        android:text="Heyy there..Enjoying SenDiT?"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="372dp"
                        android:layout_height="wrap_content"
                        android:onClick="onClick1"
                        android:paddingLeft="10sp"
                        android:paddingTop="30sp"
                        android:requiresFadingEdge="horizontal"
                        android:text="Busy"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="372dp"
                        android:layout_height="wrap_content"
                        android:onClick="onClick2"
                        android:paddingLeft="10sp"
                        android:paddingTop="30sp"
                        android:requiresFadingEdge="horizontal"
                        android:text="Can't talk"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="372dp"
                        android:layout_height="wrap_content"
                        android:onClick="onClick3"
                        android:paddingLeft="10sp"
                        android:paddingTop="30sp"
                        android:requiresFadingEdge="horizontal"
                        android:text="Happy Using SenDiT"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="372dp"
                        android:layout_height="wrap_content"
                        android:onClick="onClick4"
                        android:paddingLeft="10sp"
                        android:paddingTop="30sp"
                        android:requiresFadingEdge="horizontal"
                        android:text="at the gym"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="372dp"
                        android:layout_height="wrap_content"
                        android:onClick="onClick5"
                        android:paddingLeft="10sp"
                        android:paddingTop="30sp"
                        android:requiresFadingEdge="horizontal"
                        android:text="Battery about to die"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="372dp"
                        android:layout_height="wrap_content"
                        android:onClick="onClick6"
                        android:paddingLeft="10sp"
                        android:paddingTop="30sp"
                        android:requiresFadingEdge="horizontal"
                        android:text="sleeping"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="372dp"
                        android:layout_height="wrap_content"
                        android:onClick="onClick7"
                        android:paddingLeft="10sp"
                        android:paddingTop="30sp"
                        android:requiresFadingEdge="horizontal"
                        android:text="at the meeting"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/textView17"
                        android:layout_width="372dp"
                        android:layout_height="wrap_content"
                        android:onClick="onClick8"
                        android:paddingLeft="10sp"
                        android:paddingTop="30sp"
                        android:requiresFadingEdge="horizontal"
                        android:text="available"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
